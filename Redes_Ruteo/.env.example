# OpenWeatherMap API Configuration
# Get your key from: https://openweathermap.org/api
OPENWEATHER_KEY=your_api_key_here

# Bounding Box (default: Santiago, Chile)
# Adjust for your region
BBOX_S=-33.8
BBOX_W=-70.95
BBOX_N=-33.2
BBOX_E=-70.45

# Weather Grid Configuration
WEATHER_GRID=0.02          # Cell size in degrees (~2km)
WEATHER_PARALLEL=4         # Number of parallel API requests
RAIN_MM_H=3.0             # Rain threshold (mm/hour) for threat detection
WIND_MS=12.0              # Wind threshold (m/s) for threat detection

# Database Configuration
PGHOST=localhost
PGPORT=5432
PGDATABASE=rr
PGUSER=postgres
PGPASSWORD=postgres

# Waze Configuration
WAZE_TIMEOUT=30           # Request timeout in seconds
WAZE_RETRIES=2            # Number of retry attempts
WAZE_MAX_DEPTH=2          # Maximum subdivision depth for tiles
WAZE_USE_BROWSER=true     # Enable browser automation (requires Selenium)
WAZE_SIMULATE=false       # Enable simulation mode for testing

# Routing Configuration (optional)
START_NODE=0              # Set to specific node ID or 0 for random
END_NODE=0                # Set to specific node ID or 0 for random
